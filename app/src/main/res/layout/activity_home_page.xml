<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/page">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/org2" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="150dp"
                android:layout_toEndOf="@+id/imageView9"
                android:textColor="@color/white"
                android:layout_marginTop="85dp"
                android:text="Selamat Pagi"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_marginStart="24dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/imageView9"
                android:text="Olivia Gabrielle" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_toEndOf="@id/imageView9"
                android:layout_marginStart="24dp"
                android:text="olivia.gabriel@gmail.com"
                android:textSize="11dp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/garis3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/garis3"
                android:layout_marginTop="97dp"
                android:layout_marginLeft="363dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:foregroundGravity="center_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/hori1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/apatuh"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"/>

                    <RelativeLayout
                        android:id="@+id/relative1"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tutol"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:onClick="scan"
                        android:layout_toRightOf="@id/hori1">

                        <View
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:background="@drawable/tutupbtl"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="26dp"
                            android:layout_marginTop="51dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bpage1"
                        android:layout_toRightOf="@id/relative1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/raisa"
                android:layout_marginTop="450dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <Button
                    android:id="@+id/relative2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/barcode"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="35dp"
                    android:layout_marginTop="150dp"/>

                <TextView
                    android:id="@+id/tutupbotol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text30"
                    android:layout_marginLeft="250dp"
                    android:fontFamily="@font/montserratregular"
                    android:text="tutup botol" />

                <TextView
                    android:id="@+id/text30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="30"
                    android:textSize="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/relative2"
                    android:layout_marginLeft="51dp"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/montserratregular"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/redeemvaganza"
                android:layout_width="368dp"
                android:layout_height="122dp"
                android:layout_below="@+id/vaganza_fie"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/redeemvaganza"
                android:onClick="redeemvaganza"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/extravaganza"
                android:layout_width="368dp"
                android:layout_height="122dp"
                android:layout_alignBottom="@+id/hadiah_mena"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="210dp"
                android:onClick="extravaganza"
                android:background="@drawable/extravaganza"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/royalvaganza"
                android:layout_width="368dp"
                android:layout_height="122dp"
                android:layout_alignBottom="@+id/hadiah_mena"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="109dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/royalvaganza"></RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="1297dp"
                android:background="@drawable/frame5" />

            <TextView
                android:id="@+id/vaganza_fie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaganza Fiesta"
                android:fontFamily="@font/montserratbold"
                android:layout_marginTop="734dp"
                android:layout_marginLeft="31dp"
                android:textSize="18dp"
                android:textColor="#4D4D4D"/>

            <TextView
                android:id="@+id/hadiah_mena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hadiah Menarik"
                android:fontFamily="@font/montserratbold"
                android:layout_marginTop="1254dp"
                android:layout_marginLeft="31dp"
                android:textSize="18dp"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>


    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/hal_view"
        android:layout_gravity="end"
        app:menu="@menu/sidebar"/>




</androidx.drawerlayout.widget.DrawerLayout>
